<%- include('./header'); %>
<form method="post" action="/inserirvenda">
    
    Cliente:
    <div class="select-estiloso">
        <select id="selectcliente" name="selectcliente" onchange="getSelectedValue();">
            <%
            var p = clientes.length;
            for(var i=0;i<p;i++)
            {
            %>
                <option value="<%=clientes[i].codcli%>"><%=clientes[i].nome%></option>>
            <% } %>
            
        </select>
    </div>
    <input type="hidden" name="codcli" id="codcli">

    Produto:
    <div class="select-estiloso">
        <select id="selectproduto" onchange="getSelectedValue();">
            <%
            var c = produtos.length;
            for(var i=0;i<c;i++)
            {
            %>
                <option value="<%=produtos[i].codpro%>"><%=produtos[i].nome%></option>>
            <% } %>
            
        </select>
    </div>

    <input type="hidden" name="codpro" id="codpro">
    Quantidade:<br>
    <input type="text" name="qtd" id="qtd"> <br>
    Total:<br>
    <input type="text" name="total" id="total"> <br>
    <input type="submit" value="Finalizar venda">



</form>